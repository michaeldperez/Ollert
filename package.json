{
  "name": "ollert",
  "version": "0.0.1",
  "description": "Trello clone using React.js, TypeScript.js, Node.js, and Koa.js",
  "main": "./dist/bundle.js",
  "scripts": {
    "bundle-server": "rollup -c",
    "start": "npm run bundle-server && node ./dist/app.js",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaeldperez/Ollert.git"
  },
  "keywords": [
    "trello",
    "kanban",
    "react.js",
    "typescript.js",
    "node.js",
    "koa.js"
  ],
  "author": "Michael D. Perez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michaeldperez/Ollert/issues"
  },
  "homepage": "https://github.com/michaeldperez/Ollert#readme",
  "dependencies": {
    "body-parser": "^1.15.2",
    "config": "^1.21.0",
    "express": "^4.14.0",
    "mongodb": "^2.2.10",
    "mongodb-uri": "^0.9.7",
    "mongoose": "^4.6.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "devDependencies": {
    "enzyme": "^2.4.1",
    "file-loader": "^0.9.0",
    "jest": "^16.0.1",
    "jest-cli": "^15.1.1",
    "react-addons-test-utils": "^15.3.2",
    "react-test-renderer": "^15.3.2",
    "rollup": "^0.36.1",
    "rollup-plugin-typescript": "^0.8.1",
    "source-map-loader": "^0.1.5",
    "supertest": "^2.0.0",
    "ts-jest": "^0.1.5",
    "ts-loader": "^0.8.2"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/ts-jest/preprocessor.js",
    "collectCoverageFrom": [
      "src/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globals": {
      "__TS_CONFIG__": {
        "module": "commonjs",
        "jsx": "react"
      }
    }
  }
}
